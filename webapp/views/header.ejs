			<% }else{  %>
				<li <%if(active=="注册"){%> class="active" <%}%>><a href="/regist">注册</a></li>
				<li <%if(active=="登陆"){%> class="active" <%}%>><a href="/login">登陆</a></li>
			<% } %>
